{# app/views/_includes/appointment-note-card.njk #}

{% if event | hasAppointmentNote %}
  <div class="nhsuk-warning-callout nhsuk-u-margin-bottom-4">
    <h2 class="nhsuk-warning-callout__label">
      <span role="text">
        <span class="nhsuk-u-visually-hidden">Important: </span>
        Note
      </span>
    </h2>
    <div class="nhsuk-warning-callout__content">
      {% if allowEdits %}
        <div style="text-align: right;">
          <a href="{{ eventUrl }}/appointment-note{{ ('?referrerChain=' + referrerChain) if referrerChain }}" style="font-size: 19px;">Change<span class="nhsuk-u-visually-hidden"> note</span></a>
        </div>
      {% endif %}
      <div class="nhsuk-grid-row">
        <div class="nhsuk-grid-column-two-thirds">
          <p>{{ event.appointmentNote }}</p>
        </div>
      </div>
    </div>
  </div>
{% endif %}