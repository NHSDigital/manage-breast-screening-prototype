  {
    view: "CC (craniocaudal)",
    side: "Right"
  },
  {
    view: "MLO (mediolateral oblique)",
    side: "Right"
  },
  {
    view: "CC (craniocaudal)",
    side: "Left"
  },
  {
    view: "MLO (mediolateral oblique)",
    side: "Left",
    _comment: "Blurry"
  },
  {
    view: "MLO (mediolateral oblique)",
    side: "Left",
    _repeat: "Yes",
    _comment: "Needed clearer image"
  }
] %}

