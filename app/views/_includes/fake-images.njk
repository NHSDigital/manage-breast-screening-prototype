{% set images = [
  {
    view: "Cranio-caudal",
    side: "Right"
  },
  {
    view: "Mediolateral oblique",
    side: "Right"
  },
  {
    view: "Cranio-caudal",
    side: "Left"
  },
  {
    view: "Mediolateral oblique",
    side: "Left"
  }
] %}

